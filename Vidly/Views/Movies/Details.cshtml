@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Name</li>
    <li>Released: @Model.ReleaseDate.ToLongDateString() </li>
    <li>Added: @Model.Added.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

